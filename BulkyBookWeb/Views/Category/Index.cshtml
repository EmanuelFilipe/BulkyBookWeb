@model IEnumerable<Category>
@{
	ViewData["Title"] = "Index Category";
}

<div class="container p-3">
	<div class="row pt-4 mb-3">
			<div class="col-md-6">
				<h2 class="text-primary">Category List</h2>
			</div>
			<div class="col-md-6 text-right" style="margin-top: 15px;">
				<a class="btn btn-primary" asp-controller="Category" asp-action="Create">
					<i class="glyphicon-bishop bi-plus-circle"></i>&nbsp; New
				</a>
			</div>

	</div>


	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr>
				<th width="70%">Name</th>
				<th width="30%">Display Order</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Count() > 0)
			{
				foreach (var item in Model)
				{
					<tr>
						<td width="70%">@item.Name</td>
						<td width="30%">@item.DisplayOrder</td>
					</tr>
				}
			}
			<tr>
				<td width="100%" colspan="2" class="text-center"><span>Sem dados</span></td>
			</tr>
		</tbody>
	</table>
</div>