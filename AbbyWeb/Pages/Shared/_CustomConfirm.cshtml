<link href="~/lib/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
<script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>

<script>
	function confirmarExclusao(el) {
		$.confirm({
			title: 'Confirmação',
			content: 'Deseja realmente excluir?',
			buttons: {
				cancel: {
					text: 'Não',
					btnClass: 'btn-primary',
					action: function () {
						$.alert('Exclusão cancelada');
					}
				},
				confirm: {
					text: 'Sim',
					btnClass: 'btn-danger',
					action: function () {
						//o elemento que foi clicado > o formulario que esse el pertence > submit
						//console.log(el.path);

						var data = { id: el.id}
						$.ajax({
							data,
							type: 'POST',
							url: "?handler=Delete"
						});
					}

				}
			}
		})
	}

	function mostrarAlerta(mensagem) {
		$.alert({
			title: 'Informação',
			content: mensagem
		});
	}
</script>